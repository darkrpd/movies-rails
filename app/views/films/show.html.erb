<%- model_class = Film -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @film.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @film.details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:actors) %>:</strong></dt>
  <dd><% @film.actors.each do |film| %>
    <tr>
      <td><%= film.name %></td><br>
    </tr>
  <% end %>
</dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              films_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_film_path(@film), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              film_path(@film),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>


