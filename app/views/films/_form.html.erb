<%= form_for @film, :html => { :class => "form-horizontal film" } do |f| %>

    <% if @film.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@film.errors.count, "error") %> prohibited this film from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @film.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@film[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :details, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :details, :class => 'form-control' %>
    </div>
    <%= error_span(@film[:details]) %>
  </div>

  <h1>Choose directors </h1>
  <div class="control-group">
    <%= f.collection_check_boxes(:director_ids, @casts, :id, :name) %>
  </div>


    <h1>Choose actors </h1>
    <div class="control-group">
      <%= f.collection_check_boxes(:actor_ids, @casts, :id, :name) %>
    </div>

    <!-- <h1>Choose role </h1>
    <div class="control-group">
      <% @filmactors.each do |filmactor| %>

        <%= f.label filmactor %><br>
      <% end %>
    </div> -->




  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            films_path, :class => 'btn btn-default' %>

<% end %>
