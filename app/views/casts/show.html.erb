<p id="notice"><%= notice %></p>


<p>
  <strong>Name:</strong>
  <%= @cast.name %>
</p>

<p><strong>movies acted:</strong>
<% @cast.movies_acted.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
  </tr>
<% end %>
</p>

<p><strong>movies directed:</strong>
<% @cast.movies_directed.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
  </tr>
<% end %>
</p>

<% if can? :edit, @cast %>
  <%= link_to 'Edit', edit_cast_path(@cast) %> |
<% end %>
